{
  "version": "1.0",
  "name": "caas-event-handler",
  "func_name": "handler.lambda_handler",
  "resource_type": "lambda",
  "iam_role_name": "event-handler-role",
  "runtime": "python3.10",
  "memory": 512,
  "timeout": 100,
  "lambda_path": "/lambdas/custodian_event_handler",
  "logs_expiration": "${logs_expiration}",
  "dependencies": [
    {
      "resource_name": "SREEvents",
      "resource_type": "dynamodb_table"
    },
    {
      "resource_name": "SREEvents",
      "resource_type": "dynamodb_table"
    },
    {
      "resource_name": "SREBatchResults",
      "resource_type": "dynamodb_table"
    },
    {
      "resource_name": "SRERoles",
      "resource_type": "dynamodb_table"
    },
    {
      "resource_name": "SREPolicies",
      "resource_type": "dynamodb_table"
    }
  ],
  "event_sources": [
    {
      "target_rule": "caas-event-assembler-trigger",
      "resource_type": "cloudwatch_rule_trigger"
    },
    {
      "target_rule": "caas-event-remover-trigger",
      "resource_type": "cloudwatch_rule_trigger",
      "input": {
        "action": "clear-events"
      }
    }
  ],
  "env_variables": {
    "SRE_BATCH_JOB_DEF_NAME": "${reports-submit-job-definition}",
    "SRE_BATCH_JOB_QUEUE_NAME": "${reports-submit-job-queue}",
    "SRE_REPORTS_BUCKET_NAME": "${reports-bucket}",
    "SRE_RULESETS_BUCKET_NAME": "${caas_rulesets_bucket}",
    "SRE_BATCH_JOB_LOG_LEVEL": "DEBUG",
    "SRE_BATCH_JOB_LIFETIME_MINUTES": "${job_lifetime_min}",
    "SRE_STATISTICS_BUCKET_NAME": "${stats_s3_bucket_name}",
    "modular_assume_role_arn": "${modular_assume_role_arn}",
    "MODULAR_AWS_REGION": "${MODULAR_AWS_REGION}"
  },
  "publish_version": true,
  "alias": "${lambdas_alias_name}",
  "subnet_ids": [
    "${lambda_private_subnet_id_1}"
  ],
  "security_group_ids": [
    "${lambda_security_group_1}"
  ],
  "layers": [
    "custodian_common_dependencies_layer"
  ],
  "platforms": [
    "manylinux2014_x86_64"
  ]
}
