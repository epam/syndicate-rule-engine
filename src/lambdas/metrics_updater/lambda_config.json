{
  "version": "1.0",
  "name": "caas-metrics-updater",
  "func_name": "handler.lambda_handler",
  "resource_type": "lambda",
  "iam_role_name": "metrics-updater-role",
  "runtime": "python3.10",
  "memory": 512,
  "timeout": 900,
  "lambda_path": "/lambdas/custodian_metrics_updater",
  "logs_expiration": "${logs_expiration}",
  "dependencies": [
    {
      "resource_name": "SREJobs",
      "resource_type": "dynamodb_table"
    },
    {
      "resource_name": "SREBatchResults",
      "resource_type": "dynamodb_table"
    },
    {
      "resource_name": "SRECustomerMetrics",
      "resource_type": "dynamodb_table"
    },
    {
      "resource_name": "SRETenantMetrics",
      "resource_type": "dynamodb_table"
    },
    {
      "resource_name": "SRESettings",
      "resource_type": "dynamodb_table"
    }
  ],
  "event_sources": [
    {
      "resource_type": "cloudwatch_rule_trigger",
      "target_rule": "caas-metrics-updater-trigger"
    },
    {
      "resource_type": "cloudwatch_rule_trigger",
      "target_rule": "caas-findings-updater-trigger",
      "input": {
        "data_type": "findings"
      }
    },
    {
      "resource_type": "cloudwatch_rule_trigger",
      "target_rule": "caas-diagnostic-report-trigger",
      "input": {
        "data_type": "diagnostic"
      }
    }
  ],
  "env_variables": {
    "SRE_RULESETS_BUCKET_NAME": "${caas_rulesets_bucket}",
    "SRE_STATISTICS_BUCKET_NAME": "${stats_s3_bucket_name}",
    "application_name": "custodian-service",
    "component_name": "custodian-as-a-service",
    "SRE_METRICS_BUCKET_NAME": "${caas_metrics_bucket_name}",
    "SRE_LAMBDA_ALIAS_NAME": "${lambdas_alias_name}",
    "SRE_RECOMMENDATIONS_BUCKET_NAME": "${caas_recommendations_bucket}",
    "SRE_REPORTS_BUCKET_NAME": "${reports-bucket}",
    "modular_assume_role_arn": "${modular_assume_role_arn}",
    "MODULAR_AWS_REGION": "${MODULAR_AWS_REGION}"
  },
  "publish_version": true,
  "alias": "${lambdas_alias_name}",
  "subnet_ids": [
    "${lambda_private_subnet_id_1}"
  ],
  "security_group_ids": [
    "${lambda_security_group_1}"
  ],
  "layers": [
    "custodian_common_dependencies_layer"
  ],
  "platforms": [
    "manylinux2014_x86_64"
  ]
}
